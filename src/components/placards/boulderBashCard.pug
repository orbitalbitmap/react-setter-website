          p(class="boulder-bash-grade-value boulder6" style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; font-weight: bold;")

      div(class="boulder-bash-flex-row-container")
        div(class="boulder-bash-date-set")
          p(class="boulder-bash-date-value boulder4")
        div(class="boulder-bash-date-set")
          p(class="boulder-bash-date-value boulder5")
        div(class="boulder-bash-date-set")
          p(class="boulder-bash-date-value boulder6")

      div(class="boulder-bash-flex-row-container")
        div(class="boulder-bash-setter-name")
          p(class="boulder-bash-setter-value boulder4")
        div(class="boulder-bash-setter-name")
          p(class="boulder-bash-setter-value boulder5")
        div(class="boulder-bash-setter-name")
          p(class="boulder-bash-setter-value boulder6")

      div(class="boulder-bash-flex-row-container")
        div(class="boulder-bash-placard-images")
          img(class="boulder-bash-crg-logo" src="/images/CRG_Logo_Text_M.jpeg")
        div(class="boulder-bash-placard-images boulder-bash-flex-row-container")
          img(class="boulder-bash-instagram-logo" src="/images/IG_logo.png")
          p(class="boulder-bash-insta-handle" style="font-size: 1.5rem;") @crgworcester

  button(class="noprint" type="submit" onclick="window.print()") Print
