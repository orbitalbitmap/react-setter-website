            option(name="climb" value=climb)= `${climb.color} ${climb.grade}`

      div(class="boulder-bash-selectors")
        span Right:
        select(name="boulder6" style="margin-left: 33px; font-size: 18px;" onchange="changeBoulderPlacard('boulder6', this.value)")
          option(name="climb" value=emptyClimb) Blank
          each climb in climbs
            option(name="climb" value=climb)= `${climb.color} ${climb.grade}`

    div(class="boulder-bash-three-column-flex")
      div(class="boulder-bash-flex-row-container")
        div(class="boulder-bash-grades")
          p(class="boulder-bash-grade-value boulder4" style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; font-weight: bold;")
